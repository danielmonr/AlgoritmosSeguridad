<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.danielmonr.algoritmosseguridad.Polybios">

    <EditText android:text="@string/MD5_ejemplo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/et_Solucion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_alignTop="@+id/b_generar_pol"
        android:layout_alignBottom="@+id/b_generar_pol"
        android:layout_toLeftOf="@+id/b_generar_pol"
        android:layout_toStartOf="@+id/b_generar_pol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <Button
        android:text="Generar"
        android:id="@+id/b_generar_pol"
        android:layout_width="wrap_content"
        android:layout_height="30pt"
        android:onClick="Generar"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_explicacion_pol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_Solucion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/b_anterior_Pol"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_anterior_Pol"
        android:text="@string/Anterior"
        android:onClick="Anterior"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b_siguiente_Pol"
        android:onClick="Siguiente"
        android:text="@string/Siguiente"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
